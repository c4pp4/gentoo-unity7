<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
	<maintainer type="project">
		<name>gentoo-unity7</name>
	</maintainer>
	<use>
		<flag name="accessibility">Install accessibility packages</flag>
		<flag name="apps">Install web browser, email client and office suite,
			defaults to <pkg>www-client/firefox</pkg>, 
			<pkg>mail-client/thunderbird</pkg>
			and <pkg>app-office/libreoffice</pkg></flag>
		<flag name="chat">Install instant messenger, defaults to
			<pkg>net-im/pidgin</pkg></flag>
		<flag name="core">Install Unity core applications</flag>
		<flag name="extra">Install Unity extra applications</flag>
		<flag name="fonts">Install additional fonts</flag>
		<flag name="games">Install games</flag>
		<flag name="xdm">Use a display manager, defaults to
			<pkg>x11-misc/lightdm</pkg> and
			<pkg>unity-extra/unity-greeter</pkg></flag>
	</use>
</pkgmetadata>
