ebuild_hook() {
	ehook_use headerbar_adjust && sed -i \
		-e "/show_close_button/{s/True/False/}" \
		src/resources/ui/nautilus-{properties-window,toolbar}.ui

	sed -i \
		-e "s/multiarch_fallback/#multiarch_fallback/" \
		-e "s/revert_tracker_update/#revert_tracker_update/" \
		"${S}/debian/patches/series"
}
