ehooks() {
	## Enable GTK mode as well ##
	local myeconfargs=(
		--with-buildstamp="Gentoo Unity‚Å∑" 
		--disable-valgrind
		--enable-dbus
		--enable-gtk
		--enable-qt
		$(use_enable nls)
	)
	econf "${myeconfargs[@]}"

	## First run in GTK mode ##
	sed -i "/use_qt/{s/TRUE/FALSE/}" src/libaudcore/config.cc || die
}
