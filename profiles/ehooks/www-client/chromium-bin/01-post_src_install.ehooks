ehooks() {
	pushd "${S}" >/dev/null || die
		# add --temp-profile
		exeinto "/opt/chromium-bin"
		local sedargs=( -e
				"s:/usr/lib/:/usr/$(get_libdir)/:g"
		)
		sed "${sedargs[@]}" "${EHOOKS_FILESDIR}/chromium-bin-launcher-with-temp.sh" > chromium-bin-launcher.sh || die
		doexe chromium-bin-launcher.sh

		domenu "${EHOOKS_FILESDIR}/chromium-bin-browser-chromium.desktop"
	popd >/dev/null || die
}
